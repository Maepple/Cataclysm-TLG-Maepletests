[
  {
    "id": "health_desc_template",
    "type": "widget",
    "style": "clause",
    "clauses": [
      { "id": "horrible", "text": "Sickly", "color": "red", "condition": { "math": [ "u_val('health')", "<", "-100" ] } },
      {
        "id": "very_bad",
        "text": "Listless",
        "color": "light_red",
        "condition": { "and": [ { "math": [ "u_val('health')", ">=", "-100" ] }, { "math": [ "u_val('health')", "<", "-50" ] } ] }
      },
      {
        "id": "bad",
        "text": "Unhealthy",
        "color": "yellow",
        "condition": { "and": [ { "math": [ "u_val('health')", ">=", "-50" ] }, { "math": [ "u_val('health')", "<", "-10" ] } ] }
      },
      {
        "id": "ok",
        "text": "OK",
        "color": "light_gray",
        "condition": { "and": [ { "math": [ "u_val('health')", ">=", "-10" ] }, { "math": [ "u_val('health')", "<", "10" ] } ] }
      },
      {
        "id": "good",
        "text": "Healthy",
        "color": "white",
        "condition": { "and": [ { "math": [ "u_val('health')", ">=", "10" ] }, { "math": [ "u_val('health')", "<", "50" ] } ] }
      },
      {
        "id": "very_good",
        "text": "Robust",
        "color": "green",
        "condition": { "and": [ { "math": [ "u_val('health')", ">=", "50" ] }, { "math": [ "u_val('health')", "<", "100" ] } ] }
      },
      {
        "id": "excellent",
        "text": "Thriving",
        "color": "light_green",
        "condition": { "math": [ "u_val('health')", ">=", "100" ] }
      }
    ]
  },
  {
    "id": "health_num",
    "type": "widget",
    "label": "Health",
    "var": "health",
    "style": "number",
    "colors": [ "c_red", "c_light_red", "c_light_green", "c_green" ]
  },
  {
    "id": "health_desc",
    "type": "widget",
    "label": "Health",
    "style": "text",
    "copy-from": "health_desc_template"
  }
]
